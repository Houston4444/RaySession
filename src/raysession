        self.ui.pushButtonAbort.setEnabled(not bool(server_status in (SERVER_STATUS_CLOSE, SERVER_STATUS_OFF, SERVER_STATUS_COPY)))
        if server_status == SERVER_STATUS_OFF:
            self.reject()
       
